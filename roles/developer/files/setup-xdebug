if [[ $UID != 0 ]]; then
  echo "Please run this script with sudo:"
  echo "sudo $0 $*"
  exit 1
fi
if [[ "${1}" != "local" && "${1}" != "remote" ]]; then
  echo "Usage setup-xdebug (local|remote)";
  exit;
fi
if [ "${1}" == "local" ]; then
  sed -i 's/xdebug.remote_connect_back = [01]/xdebug.remote_connect_back = 0/' /etc/php.d/xdebug.ini
else
  sed -i 's/xdebug.remote_connect_back = [01]/xdebug.remote_connect_back = 1/' /etc/php.d/xdebug.ini
fi
/etc/init.d/httpd restart
